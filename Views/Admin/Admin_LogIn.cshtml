@model Asp.net_Project.Models.Admin

@{
    ViewBag.Title = "Admin_LogIn";
}


<br />
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="jumbotron">
        <div class="form-horizontal" align="center">
            <h2 align="center">Admin Login </h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @{
                if (Request.Params["val"] != null)
                {
                    <h3 style="color:red">Username or  password Incorrect!!</h3>
                }
            }


            <br />
            <div class="form-group">

                <label class="control-label col-md-2"><b>UserName :</b></label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control col-md-8", @placeholder = "User Name" } })
                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-md-2"><b>Password :</b></label>

                <div class="col-md-10">
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control col-md-8", @placeholder = "Passworde", Type = "password" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
                <br />


            </div>
            <hr />
        </div>
    </div>
}


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
