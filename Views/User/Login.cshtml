@model Asp.net_Project.Models.User

@{
    ViewBag.Title = "Login";
}
<br />
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="jumbotron">
        <h6 align="center" style="color:Highlight">NB: You need to hava an account to ask and answers questions</h6>
        <div class="form-horizontal" align="center">
            <h2 align="center">Login Page</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @{
                if (Request.Params["val"] != null)
                {
                    <h3 style="color:red">Username or  password Incorrect!!</h3>
                }
            }


            <br />
            <div class="form-group">

                <label class="control-label col-md-2"><b>UserName :</b></label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control col-md-8", @placeholder = "User Name" } })
                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-md-2"><b>Password :</b></label>

                <div class="col-md-10">
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control col-md-8", @placeholder = "Passworde", Type = "password" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
                <br />

                @Html.ActionLink("New Here? Create an account ", "SignUp")

            </div>
            <hr />
        </div>
    </div>
}
